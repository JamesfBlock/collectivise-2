<div class="container" style="padding-top: 50px;">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h1>Add a new car</h1>
      <p>This is where the form to add a car will be</p>
      <%= simple_form_for(@car) do |f| %>
      <%= f.input :manufacturer %>
      <%= f.input :model %>
      <%= f.input :car_type %>
      <%= f.input :year %>
      <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

</div>
